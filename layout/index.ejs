<div class="home-content">
    <section class="header-section">
        <h1 class="site-title">GDownload</h1>
        <p class="site-description">基于aria2的多线程下载工具</p>
    </section>
    
    <section class="download-section">
        <h2><%= page.lang === 'en' ? 'Download' : '下载地址' %></h2>
        <div class="platform-downloads">
            <% for (const [platform, info] of Object.entries(theme.download)) { %>
                <% if (['windows', 'macos', 'linux'].includes(platform)) { %>
                    <a href="<%= info.url %>" class="download-btn platform">
                        <i class="ri-<%= info.icon %>"></i>
                        <div class="platform-info">
                            <span class="platform-name"><%= info.text %></span>
                            <span class="version"><%= info.version || 'v1.0.0' %></span>
                        </div>
                    </a>
                <% } %>
            <% } %>
        </div>
    </section>

    <section class="features-section">
        <div class="feature-grid">
            <div class="feature-item">
                <i class="ri-download-cloud-2-line"></i>
                <% if (page.lang === 'en') { %>
                    <h3>Aria2 Engine</h3>
                    <p>Powered by aria2 multi-thread download engine</p>
                <% } else { %>
                    <h3>Aria2引擎</h3>
                    <p>基于aria2引擎,支持多线程高速下载</p>
                <% } %>
            </div>
            
            <div class="feature-item">
                <i class="ri-hard-drive-2-line"></i>
                <% if (page.lang === 'en') { %>
                    <h3>Cloud Drive Support</h3>
                    <p>Support various cloud drive downloads</p>
                <% } else { %>
                    <h3>网盘支持</h3>
                    <p>支持各大网盘插件下载任务</p>
                <% } %>
            </div>
            
            <div class="feature-item">
                <i class="ri-chrome-line"></i>
                <% if (page.lang === 'en') { %>
                    <h3>Browser Extension</h3>
                    <p>Download with browser extension support</p>
                <% } else { %>
                    <h3>浏览器插件</h3>
                    <p>配合浏览器插件实现下载任务接管</p>
                <% } %>
            </div>
        </div>
    </section>
    

</div>
